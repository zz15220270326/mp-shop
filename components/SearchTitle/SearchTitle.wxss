.search-title {
  background-color: #fff;
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-title input {
  height: 100%;
  flex: 7;
  border: 3rpx solid #f6f6f6;
  padding-left: 28rpx;
  color: #666;
  margin-right: 15rpx;
  border-radius: 20rpx;
}
.search-title button {
  width: 60rpx;
  height: 100%;
  flex: 2;
  font-size: 25rpx;
  color: #fa9696;
}
