.pay-content .cart-info {
  padding: 16rpx 0;
}
.pay-content .cart-info .cart-item {
  display: flex;
  border-bottom: 5rpx solid #dedede;
}
.pay-content .cart-info .cart-item .item-check {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-content .cart-info .cart-item .item-check checkbox-group checkbox {
  border-collapse: initial;
}
.pay-content .cart-info .cart-item .item-picture {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-content .cart-info .cart-item .item-picture image {
  width: 80%;
}
.pay-content .cart-info .cart-item .item-info {
  flex: 4;
}
.pay-content .cart-info .cart-item .item-info .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.pay-content .cart-info .cart-item .item-info .control {
  display: flex;
  justify-content: space-between;
}
.pay-content .cart-info .cart-item .item-info .control .goods-price {
  padding-top: 16rpx;
  padding-left: 10rpx;
  font-size: 36rpx;
  color: var(--themeColor);
}
.pay-content .cart-info .cart-item .item-info .control .num-control {
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay-content .cart-info .cart-item .item-info .control .num-control .num {
  margin: 0 32rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: lightslategray;
}
