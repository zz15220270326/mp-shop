.goods-list-item {
  background-color: #fff;
}
.goods-list-item .goods-item {
  display: flex;
  border-bottom: 3rpx solid rgba(0, 0, 0, 0.2);
}
.goods-list-item .goods-item .goods-image-wrapper {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.goods-list-item .goods-item .goods-image-wrapper image {
  width: 70%;
}
.goods-list-item .goods-item .goods-info-wrapper {
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: space-around;
}
.goods-list-item .goods-item .goods-info-wrapper .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #888;
}
.goods-list-item .goods-item .goods-info-wrapper .goods-price {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--themeColor);
}
